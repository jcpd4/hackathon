{
  "manifest_version": 3,
  "name": "Email Scam and AI Detection",
  "version": "1.0",
  "description": "Detecta posibles correos electr√≥nicos scam y analiza texto generado por IA.",
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "styles.css"],
      "matches": ["https://mail.google.com/*"]
    }
  ],
  "host_permissions": [
    "https://www.virustotal.com/api/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://www.virustotal.com"
  }
}
